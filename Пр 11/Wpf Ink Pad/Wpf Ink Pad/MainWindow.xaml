<Window x:Class="Wpf_Ink_Pad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Ink_Pad"
        mc:Ignorable="d"
        Title="Ink Pad" Height="550" Width="370" Background="LightGray">
    <Grid>
        <InkCanvas Background="LightYellow">
            <Button Content="Clear" HorizontalAlignment="Left" Margin="10,100,0,0" Click="Button_Click_2"/>
            <Button Content="Close" HorizontalAlignment="Right" Margin="300,100,100,0" Click="Button_Click_3"/>
        </InkCanvas>
    </Grid>
</Window>
